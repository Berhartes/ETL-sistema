# ========================================
# SISTEMA ETL - CÂMARA DOS DEPUTADOS
# ========================================

# ========================================
# CONFIGURAÇÕES DO FIREBASE/GOOGLE CLOUD
# ========================================
GCP_PROJECT_ID="seu-projeto-firebase-id"
GOOGLE_APPLICATION_CREDENTIALS="./config/serviceAccountKey.json"
FIRESTORE_PROJECT_ID="seu-projeto-firebase-id"

# ========================================
# CONFIGURAÇÕES DA API DA CÂMARA
# ========================================
CAMARA_API_BASE_URL="https://dadosabertos.camara.leg.br/api/v2"
CAMARA_API_TIMEOUT=30000
CAMARA_API_RATE_LIMIT=2
CAMARA_API_MAX_RETRIES=3

# ========================================
# CONFIGURAÇÕES DE LOGGING
# ========================================
LOG_LEVEL="info"
LOG_COLORIZE=true
LOG_INCLUDE_TIMESTAMP=true
LOG_API_REQUESTS=false
LOG_API_RESPONSES=false

# ========================================
# CONFIGURAÇÕES DE AMBIENTE
# ========================================
NODE_ENV="development"
DEBUG=false
ENABLE_PERFORMANCE_METRICS=true

# ========================================
# CONFIGURAÇÕES DE CONCORRÊNCIA
# ========================================
DEFAULT_CONCURRENCY=3
MAX_CONCURRENCY=10

# ========================================
# CONFIGURAÇÕES DO FIRESTORE
# ========================================
FIRESTORE_BATCH_SIZE=100
FIRESTORE_MAX_SIZE=1048576
FIRESTORE_EMULATOR_HOST="127.0.0.1:8080"

# ========================================
# CONFIGURAÇÕES DE RETRY E ROBUSTEZ
# ========================================
DEFAULT_RETRIES=5
RETRY_DELAY=3000
RETRY_MAX_DELAY=60000
RETRY_BACKOFF_MULTIPLIER=2

# ========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ========================================
OPERATION_TIMEOUT=60000
MAX_FILE_SIZE=104857600
MAX_RECORDS_PER_BATCH=100
MAX_CONCURRENT_CONNECTIONS=5

# ========================================
# CONFIGURAÇÕES ESPECÍFICAS POR PROCESSADOR
# ========================================
DESPESAS_ITEMS_PER_PAGE=75
DISCURSOS_ITEMS_PER_PAGE=75
DESPESAS_RECENT_MONTHS=2
DISCURSOS_RECENT_DAYS=60

# ========================================
# CONFIGURAÇÕES DE EXPORTAÇÃO
# ========================================
EXPORT_BASE_DIR="./exports"
EXPORT_COMPRESSION=false
SAVE_RAW_DATA=true

# ========================================
# INSTRUÇÕES DE SETUP
# ========================================
# 1. Copie este arquivo: cp .env.example .env
# 2. Preencha GCP_PROJECT_ID com o ID do seu projeto Firebase
# 3. Coloque o arquivo de credenciais em ./config/serviceAccountKey.json
# 4. Ajuste outras configurações conforme necessário
# 5. NUNCA commite o arquivo .env final!